<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

   
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+telasplash/imgSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/ts_animacao" android:visibility="invisible">
        </ImageView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/ts_fundoanimacao" android:visibility="invisible">
        </ImageView>

        <TextView
            android:id="@+id/tvTexto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aguarde"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" android:layout_below="@id/imageView1" android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/ivBkRio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+telasplash/imgSplash"
            android:layout_alignParentLeft="true"
            android:src="@drawable/animicodireita" android:visibility="invisible"/>

        <ImageView
            android:id="@+id/ivBkRio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTexto"
            android:layout_alignParentLeft="true"
            android:src="@drawable/animicoesqueda" android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>