<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

   

        <TextView
            android:id="@+id/tvTexto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Aguarde"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/imgFolha1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/folha_1" />

        <ImageView
            android:id="@+id/imgFolha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/folha_1" />

        <ImageView
            android:id="@+id/imgFolha3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/folha_1" />

        <ImageView
            android:id="@+id/imgFolha4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/folha_1" android:layout_marginTop="45dp"/>

</RelativeLayout>